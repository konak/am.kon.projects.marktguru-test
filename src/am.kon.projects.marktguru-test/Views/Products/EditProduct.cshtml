@using am.kon.projects.marktguru_test.Models.Products
@using am.kon.projects.marktguru_test.Controllers.Models

@model ProductEditModel

@{
    ViewData["Title"] = "Edit Products";
}

<div class="container">
    <div class="row bg-light">
        <div class="col col-lg-2">
            <a class="btn" asp-area="" asp-controller="Products" asp-action="Index">Back</a>
        </div>
    </div>
</div>

<hr/>
<h4>Edit Product</h4>
<hr/>

<div class="container">
    <div class="row">
        <div class="col-5">
            <form id="createProduct" asp-action="EditProduct" asp-controller="Products" method="post">
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input readonly="readonly" asp-for="Id" class="form-control" placeholder="my product name"/>
                    <label asp-for="Id"></label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="my product name"/>
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Price"  class="form-control" placeholder="product price"/>
                    <label asp-for="Price"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Description" class="form-control" placeholder="product description"/>
                    <label asp-for="Description"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <input asp-for="Available" class="form-check-input"/>
                    <label asp-for="Available"></label>
                    <span asp-validation-for="Available" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Version"/>
                <button type="submit" class="btn btn-primary">Update</button>
                <a class="btn btn-lg btn-light" asp-area="" asp-controller="Products" asp-action="Index">Cancel</a>
            </form>        
        </div>
    </div>
</div>

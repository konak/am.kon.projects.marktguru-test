@using am.kon.projects.marktguru_test.Models.Products
@using am.kon.projects.marktguru_test.Controllers.Models

@model ProductsPageBaseModel<IEnumerable<ProductListItemModel>>

@{
    ViewData["Title"] = "Products List";
}

<div class="container">
    <div class="row bg-light">
        <div class="col col-lg-2">
            <a class="btn w-100 btn-primary" asp-area="" asp-controller="Products" asp-action="CreateProduct">Create Product</a>
        </div>
    </div>
</div>

<hr/>

@if (Model.HasMessage)
{
    <div class="alert alert-info">
        @Model.Message
    </div>
}
else
{
    <div class="container">
        <div class="row bg-info">
            <div class="col col-3 text-center text-white">Name</div>
            <div class="col col-1 text-center text-white">Price</div>
            <div class="col col-1 text-center text-white">Available</div>
            <div class="col col-4 text-center text-white">Id</div>
            <div class="col col-3 text-center text-white">Action</div>
        </div>
            @foreach (var item in Model.Data)
            {
                <div class="row">
                    <div class="col col-3">@item.Name</div>
                    <div class="col col-1 text-center">@item.Price</div>
                    <div class="col col-1 text-center">@item.Available</div>
                    <div class="col col-4 text-center">@item.Id</div>
                    <div class="col col-3 text-center">
                        <a class="btn btn-link" asp-area="" asp-controller="Products" asp-action="ProductDetails" asp-route-id="@item.Id">Details</a>
                        &nbsp;|&nbsp;
                        <a class="btn btn-link" asp-area="" asp-controller="Products" asp-action="EditProduct" asp-route-id="@item.Id">Edit</a>
                        &nbsp;|&nbsp;
                        <a class="btn btn-link" asp-area="" asp-controller="Products" asp-action="DeleteProduct" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
            }
    </div>
}
